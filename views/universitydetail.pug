extends layout

block content
  h1= title

  - let universityid = toShow._id
  - let university_id = toShow.university_id
  - let name = toShow.name
  - let location = toShow.location

  div
    div.row
      div(class='universityAttr mr-3') University ID is:
      div #{universityid}

    div.row
      div(class='universityAttr mr-3') University id is:
      div #{university_id}

    div.row
      div(class='universityAttr mr-3') University Name is:
      div #{name}

    div.row
      div(class='universityAttr mr-3') University Location is:
      div #{location}
